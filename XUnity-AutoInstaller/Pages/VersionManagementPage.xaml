<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XUnity_AutoInstaller.Pages.VersionManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XUnity_AutoInstaller.Pages"
    xmlns:models="using:XUnity_AutoInstaller.Models"
    xmlns:services="using:XUnity_AutoInstaller.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Margin="24">
        <StackPanel Spacing="24">
            <!-- 页面标题 -->
            <TextBlock
                Text="版本管理"
                FontSize="32"
                FontWeight="Bold"
                Margin="0,0,0,8"/>

            <!-- 已安装版本区域 -->
            <StackPanel Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        Glyph="&#xE74C;"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SystemAccentColor}"/>
                    <TextBlock
                        Text="已安装版本"
                        FontSize="22"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    <Button
                        Style="{StaticResource TextBlockButtonStyle}"
                        Command="{x:Bind ViewModel.RefreshInstalledVersionsCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                <TextBlock Text="刷新" FontSize="14"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="400">
                    <Grid>
                        <ListView
                            x:Name="InstalledVersionsListView"
                            ItemsSource="{x:Bind ViewModel.InstalledVersions, Mode=OneWay}"
                            SelectionMode="Single"
                            SelectedItem="{x:Bind ViewModel.SelectedInstalledVersion, Mode=TwoWay}"
                            Visibility="{x:Bind ViewModel.InstalledListVisibility, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="services:InstalledVersionInfo">
                                    <Grid Padding="12,8">
                                        <StackPanel Spacing="4">
                                            <TextBlock
                                                Text="{x:Bind PackageType}"
                                                FontWeight="SemiBold"
                                                FontSize="16"/>
                                            <TextBlock
                                                Text="{x:Bind Version}"
                                                FontSize="14"
                                                Opacity="0.7"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock
                                                    Text="{x:Bind Platform}"
                                                    FontSize="14"
                                                    Opacity="0.7"/>
                                                <TextBlock
                                                    Text="-"
                                                    FontSize="14"
                                                    Opacity="0.7"/>
                                                <TextBlock
                                                    Text="{x:Bind InstallDate}"
                                                    FontSize="14"
                                                    Opacity="0.7"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>


                        <!-- 空状态提示 -->
                        <StackPanel
                            x:Name="EmptyInstalledPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="{x:Bind ViewModel.EmptyInstalledVisibility, Mode=OneWay}">
                            <FontIcon
                                Glyph="&#xE7C3;"
                                FontSize="48"
                                Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                            <TextBlock
                                Text="暂无已安装版本"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                            <TextBlock
                                Text="请先安装 BepInEx 或 XUnity"
                                FontSize="14"
                                Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- TODO: 快照管理功能待实现 -->
            </StackPanel>

            <!-- 可用版本区域 -->
            <StackPanel Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        Glyph="&#xE896;"
                        FontSize="24"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SystemAccentColor}"/>
                    <TextBlock
                        Text="可用版本"
                        FontSize="22"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    <Button
                        Style="{StaticResource TextBlockButtonStyle}"
                        Command="{x:Bind ViewModel.RefreshAvailableVersionsCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                <TextBlock Text="刷新" FontSize="14"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- 筛选器 -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="筛选选项" FontSize="16" FontWeight="SemiBold"/>

                        <StackPanel Spacing="12">
                            <ComboBox
                                x:Name="PlatformFilterComboBox"
                                Header="平台"
                                FontSize="14"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="{x:Bind ViewModel.SelectedPlatformFilterIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="全部平台"/>
                                <ComboBoxItem Content="Mono"/>
                                <ComboBoxItem Content="IL2CPP"/>
                            </ComboBox>

                            <ComboBox
                                x:Name="ArchitectureFilterComboBox"
                                Header="架构"
                                FontSize="14"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="{x:Bind ViewModel.SelectedArchitectureFilterIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="全部架构"/>
                                <ComboBoxItem Content="x64"/>
                                <ComboBoxItem Content="x86"/>
                            </ComboBox>

                            <ComboBox
                                x:Name="VersionTypeComboBox"
                                Header="版本类型"
                                FontSize="14"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="{x:Bind ViewModel.SelectedVersionTypeIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="全部版本"/>
                                <ComboBoxItem Content="正式版"/>
                                <ComboBoxItem Content="预发布版"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- BepInEx 版本列表 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="BepInEx 版本" FontWeight="SemiBold" FontSize="16"/>
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="250">
                        <Grid>
                            <ListView
                                x:Name="BepInExVersionsListView"
                                ItemsSource="{x:Bind ViewModel.BepInExVersions, Mode=OneWay}"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:AvailableVersionItem">
                                        <Grid Padding="12,8" ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Text="{x:Bind DisplayText}"
                                                TextWrapping="NoWrap"
                                                FontSize="14"
                                                VerticalAlignment="Center"/>

                                            <!-- Download Button (visible when not cached) -->
                                            <Button
                                                Grid.Column="1"
                                                Content="下载"
                                                FontSize="14"
                                                Height="36"
                                                Padding="16,6"
                                                Tag="{x:Bind}"
                                                Visibility="{x:Bind IsDownloadButtonVisible}"
                                                Click="DownloadButton_Click"/>

                                            <!-- Already Downloaded Indicator (visible when cached) -->
                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Horizontal"
                                                Spacing="6"
                                                VerticalAlignment="Center"
                                                Visibility="{x:Bind IsDownloadedTextVisible}">
                                                <FontIcon
                                                    Glyph="&#xE73E;"
                                                    FontSize="16"
                                                    Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                                <TextBlock
                                                    Text="已下载"
                                                    FontSize="14"
                                                    Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- 加载提示 -->
                            <StackPanel
                                x:Name="BepInExLoadingPanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="12"
                                Visibility="Collapsed">
                                <ProgressRing
                                    IsActive="True"
                                    Width="40"
                                    Height="40"/>
                                <TextBlock
                                    Text="加载中..."
                                    FontSize="14"
                                    Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- XUnity 版本列表 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="XUnity.AutoTranslator 版本" FontWeight="SemiBold" FontSize="16"/>
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="250">
                        <Grid>
                            <ListView
                                x:Name="XUnityVersionsListView"
                                ItemsSource="{x:Bind ViewModel.XUnityVersions, Mode=OneWay}"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:AvailableVersionItem">
                                        <Grid Padding="12,8" ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Text="{x:Bind DisplayText}"
                                                TextWrapping="NoWrap"
                                                FontSize="14"
                                                VerticalAlignment="Center"/>

                                            <!-- Download Button (visible when not cached) -->
                                            <Button
                                                Grid.Column="1"
                                                Content="下载"
                                                FontSize="14"
                                                Height="36"
                                                Padding="16,6"
                                                Tag="{x:Bind}"
                                                Visibility="{x:Bind IsDownloadButtonVisible}"
                                                Click="DownloadButton_Click"/>

                                            <!-- Already Downloaded Indicator (visible when cached) -->
                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Horizontal"
                                                Spacing="6"
                                                VerticalAlignment="Center"
                                                Visibility="{x:Bind IsDownloadedTextVisible}">
                                                <FontIcon
                                                    Glyph="&#xE73E;"
                                                    FontSize="16"
                                                    Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                                <TextBlock
                                                    Text="已下载"
                                                    FontSize="14"
                                                    Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- 加载提示 -->
                            <StackPanel
                                x:Name="XUnityLoadingPanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="12"
                                Visibility="Collapsed">
                                <ProgressRing
                                    IsActive="True"
                                    Width="40"
                                    Height="40"/>
                                <TextBlock
                                    Text="加载中..."
                                    FontSize="14"
                                    Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
