<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XUnity.AutoInstaller.Pages.VersionManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XUnity.AutoInstaller.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <TextBlock
            Grid.Row="0"
            Text="版本管理"
            Style="{StaticResource TitleTextBlockStyle}"
            Margin="0,0,0,24"/>

        <!-- 主内容区 -->
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：已安装版本 -->
            <StackPanel Grid.Column="0" Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        Glyph="&#xE74C;"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SystemAccentColor}"/>
                    <TextBlock
                        Text="已安装版本"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        VerticalAlignment="Center"/>
                    <Button
                        Style="{StaticResource TextBlockButtonStyle}"
                        Click="RefreshInstalledButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="刷新" FontSize="12"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="500">
                    <Grid>
                        <ListView
                            x:Name="InstalledVersionsListView"
                            SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            Glyph="&#xE7C3;"
                                            FontSize="32"
                                            VerticalAlignment="Center"
                                            Foreground="{ThemeResource SystemAccentColor}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock
                                                Text="BepInEx v5.4.23.2"
                                                FontWeight="SemiBold"
                                                FontSize="14"/>
                                            <TextBlock
                                                Text="安装日期: 2024-01-15"
                                                FontSize="12"
                                                Opacity="0.7"/>
                                            <TextBlock
                                                Text="平台: x64"
                                                FontSize="12"
                                                Opacity="0.7"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Spacing="4" VerticalAlignment="Center">
                                            <Button
                                                Content="卸载"
                                                Click="UninstallButton_Click"
                                                Width="80"/>
                                            <Button
                                                Content="设为活动"
                                                Style="{StaticResource AccentButtonStyle}"
                                                Click="SetActiveButton_Click"
                                                Width="80"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- 空状态提示 -->
                        <StackPanel
                            x:Name="EmptyInstalledPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12">
                            <FontIcon
                                Glyph="&#xE7C3;"
                                FontSize="48"
                                Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                            <TextBlock
                                Text="暂无已安装版本"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                            <TextBlock
                                Text="请先安装 BepInEx 或 XUnity"
                                FontSize="12"
                                Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 快照管理按钮 -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button
                        Style="{StaticResource AccentButtonStyle}"
                        Click="SetActiveButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                                <TextBlock Text="创建快照"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        Click="RestoreSnapshotButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE7A7;" FontSize="16"/>
                                <TextBlock Text="恢复快照"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        Click="DeleteSnapshotButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                <TextBlock Text="删除快照"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- 右侧：可用版本 -->
            <StackPanel Grid.Column="1" Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        Glyph="&#xE896;"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SystemAccentColor}"/>
                    <TextBlock
                        Text="可用版本"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        VerticalAlignment="Center"/>
                    <Button
                        Style="{StaticResource TextBlockButtonStyle}"
                        Click="RefreshAvailableButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="刷新" FontSize="12"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- 筛选器 -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="筛选选项" FontWeight="SemiBold"/>

                        <StackPanel Spacing="8">
                            <ComboBox
                                x:Name="PackageFilterComboBox"
                                Header="选择包"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="0"
                                SelectionChanged="PackageFilterComboBox_SelectionChanged">
                                <ComboBoxItem Content="全部"/>
                                <ComboBoxItem Content="BepInEx"/>
                                <ComboBoxItem Content="XUnity.AutoTranslator"/>
                            </ComboBox>

                            <ComboBox
                                x:Name="VersionTypeComboBox"
                                Header="版本类型"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="0"
                                SelectionChanged="VersionTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="全部版本"/>
                                <ComboBoxItem Content="稳定版"/>
                                <ComboBoxItem Content="预览版"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 可用版本列表 -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="380">
                    <Grid>
                        <ListView
                            x:Name="AvailableVersionsListView"
                            SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <FontIcon
                                            Grid.Column="0"
                                            Glyph="&#xE896;"
                                            FontSize="32"
                                            VerticalAlignment="Center"
                                            Foreground="{ThemeResource SystemAccentColor}"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock
                                                    Text="BepInEx v5.4.23.2"
                                                    FontWeight="SemiBold"
                                                    FontSize="14"/>
                                                <Border
                                                    Background="{ThemeResource SystemAccentColor}"
                                                    CornerRadius="4"
                                                    Padding="6,2">
                                                    <TextBlock
                                                        Text="最新"
                                                        FontSize="10"
                                                        Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock
                                                Text="发布日期: 2024-01-10"
                                                FontSize="12"
                                                Opacity="0.7"/>
                                            <TextBlock
                                                Text="大小: 15.2 MB"
                                                FontSize="12"
                                                Opacity="0.7"/>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="2"
                                            Style="{StaticResource AccentButtonStyle}"
                                            Click="DownloadButton_Click"
                                            VerticalAlignment="Center">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                                    <TextBlock Text="下载"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- 加载提示 -->
                        <StackPanel
                            x:Name="LoadingPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12"
                            Visibility="Collapsed">
                            <ProgressRing
                                IsActive="True"
                                Width="48"
                                Height="48"/>
                            <TextBlock
                                Text="正在获取版本列表..."
                                Style="{StaticResource BodyTextBlockStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
