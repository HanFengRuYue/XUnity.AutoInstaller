<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XUnity.AutoInstaller.Pages.VersionManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XUnity.AutoInstaller.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <TextBlock
            Grid.Row="0"
            Text="版本管理"
            Style="{StaticResource TitleTextBlockStyle}"
            Margin="0,0,0,24"/>

        <!-- 主内容区 -->
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：已安装版本 -->
            <StackPanel Grid.Column="0" Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        Glyph="&#xE74C;"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SystemAccentColor}"/>
                    <TextBlock
                        Text="已安装版本"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        VerticalAlignment="Center"/>
                    <Button
                        Style="{StaticResource TextBlockButtonStyle}"
                        Click="RefreshInstalledButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="刷新" FontSize="12"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="500">
                    <Grid>
                        <ListView
                            x:Name="InstalledVersionsListView"
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,4">
                                        <!-- 标题行显示 -->
                                        <TextBlock
                                            x:Name="HeaderText"
                                            Text="{Binding DisplayText}"
                                            FontWeight="SemiBold"
                                            FontSize="14"
                                            Margin="0,8,0,4"
                                            Visibility="{Binding HeaderVisibility}"/>

                                        <!-- 当前安装/快照显示 -->
                                        <StackPanel
                                            x:Name="ContentPanel"
                                            Spacing="4"
                                            Visibility="{Binding ContentVisibility}">
                                            <Grid ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 左侧信息 -->
                                                <StackPanel Grid.Column="0" Spacing="2">
                                                    <TextBlock
                                                        Text="{Binding DisplayText}"
                                                        FontWeight="SemiBold"
                                                        FontSize="13"/>
                                                    <TextBlock
                                                        Text="{Binding SubText1}"
                                                        FontSize="11"
                                                        Opacity="0.7"/>
                                                    <TextBlock
                                                        Text="{Binding SubText2}"
                                                        FontSize="11"
                                                        Opacity="0.7"/>
                                                </StackPanel>

                                                <!-- 右侧按钮 -->
                                                <StackPanel
                                                    x:Name="ButtonPanel"
                                                    Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Spacing="8"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding ButtonsVisibility}">
                                                    <Button
                                                        FontSize="11"
                                                        Padding="12,4"
                                                        Tag="{Binding}"
                                                        Click="RestoreSnapshotItemButton_Click">
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <FontIcon Glyph="&#xE7A7;" FontSize="12"/>
                                                                <TextBlock Text="恢复"/>
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                    <Button
                                                        FontSize="11"
                                                        Padding="12,4"
                                                        Tag="{Binding}"
                                                        Click="DeleteSnapshotItemButton_Click">
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <FontIcon Glyph="&#xE74D;" FontSize="12"/>
                                                                <TextBlock Text="删除"/>
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>


                        <!-- 空状态提示 -->
                        <StackPanel
                            x:Name="EmptyInstalledPanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12">
                            <FontIcon
                                Glyph="&#xE7C3;"
                                FontSize="48"
                                Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                            <TextBlock
                                Text="暂无已安装版本"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                            <TextBlock
                                Text="请先安装 BepInEx 或 XUnity"
                                FontSize="12"
                                Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 快照管理按钮 -->
                <Button
                    Style="{StaticResource AccentButtonStyle}"
                    Click="SetActiveButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                            <TextBlock Text="创建快照"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>

            <!-- 右侧：可用版本 -->
            <StackPanel Grid.Column="1" Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        Glyph="&#xE896;"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource SystemAccentColor}"/>
                    <TextBlock
                        Text="可用版本"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        VerticalAlignment="Center"/>
                    <Button
                        Style="{StaticResource TextBlockButtonStyle}"
                        Click="RefreshAvailableButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                <TextBlock Text="刷新" FontSize="12"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- 筛选器 -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="筛选选项" FontWeight="SemiBold"/>

                        <StackPanel Spacing="8">
                            <ComboBox
                                x:Name="PlatformFilterComboBox"
                                Header="平台"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="0"
                                SelectionChanged="PlatformFilterComboBox_SelectionChanged">
                                <ComboBoxItem Content="全部平台"/>
                                <ComboBoxItem Content="x86"/>
                                <ComboBoxItem Content="x64"/>
                                <ComboBoxItem Content="ARM64"/>
                            </ComboBox>

                            <ComboBox
                                x:Name="ArchitectureFilterComboBox"
                                Header="架构"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="0"
                                SelectionChanged="ArchitectureFilterComboBox_SelectionChanged">
                                <ComboBoxItem Content="全部架构"/>
                                <ComboBoxItem Content="Mono"/>
                                <ComboBoxItem Content="IL2CPP"/>
                            </ComboBox>

                            <ComboBox
                                x:Name="VersionTypeComboBox"
                                Header="版本类型"
                                HorizontalAlignment="Stretch"
                                SelectedIndex="0"
                                SelectionChanged="VersionTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="全部版本"/>
                                <ComboBoxItem Content="稳定版"/>
                                <ComboBoxItem Content="预览版"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- BepInEx 版本列表 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="BepInEx 版本" FontWeight="SemiBold" FontSize="14"/>
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="180">
                        <Grid>
                            <ListView
                                x:Name="BepInExVersionsListView"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,6" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Text="{Binding DisplayText}"
                                                TextWrapping="NoWrap"
                                                FontSize="12"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                Grid.Column="1"
                                                Content="下载"
                                                FontSize="11"
                                                Padding="12,4"
                                                Tag="{Binding}"
                                                Click="DownloadButton_Click"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- 加载提示 -->
                            <StackPanel
                                x:Name="BepInExLoadingPanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="12"
                                Visibility="Collapsed">
                                <ProgressRing
                                    IsActive="True"
                                    Width="32"
                                    Height="32"/>
                                <TextBlock
                                    Text="加载中..."
                                    FontSize="12"
                                    Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- XUnity 版本列表 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="XUnity.AutoTranslator 版本" FontWeight="SemiBold" FontSize="14"/>
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="180">
                        <Grid>
                            <ListView
                                x:Name="XUnityVersionsListView"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="8,6" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Text="{Binding DisplayText}"
                                                TextWrapping="NoWrap"
                                                FontSize="12"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                Grid.Column="1"
                                                Content="下载"
                                                FontSize="11"
                                                Padding="12,4"
                                                Tag="{Binding}"
                                                Click="DownloadButton_Click"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- 加载提示 -->
                            <StackPanel
                                x:Name="XUnityLoadingPanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="12"
                                Visibility="Collapsed">
                                <ProgressRing
                                    IsActive="True"
                                    Width="32"
                                    Height="32"/>
                                <TextBlock
                                    Text="加载中..."
                                    FontSize="12"
                                    Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
